FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 273;

boundaryField
{
    walls
    {
        type            zeroGradient;
    }

    outlet
    {
        type            fixedValue;
        value           uniform 273;
    }

    inlet
    {
        type            fixedValue;
        value           uniform 573;
    }
}

